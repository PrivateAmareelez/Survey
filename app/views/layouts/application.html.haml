!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", 'http-equiv' => "Content-Type"}/
    %title Survey
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://www.gstatic.com/charts/loader.js'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render 'nav'
    .container
      = content_tag :div, flash[:notice], class: "alert alert-success" if flash[:notice]
      = content_tag :div, flash[:alert], class: "alert alert-danger" if flash[:alert]
      = content_tag :div, flash[:warning], class: "alert alert-warning" if flash[:warning]
      = content_tag :div, flash[:info], class: "alert alert-info" if flash[:info]
      = yield
    = yield :footer
